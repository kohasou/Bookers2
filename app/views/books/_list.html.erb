<p id="notice"></p>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book do |f| %>
      <div class="form-group">
        <h6>Title</h6>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <h6>opinion</h6>
        <%= f.text_area :body %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class:"btn-success" %>
      </div>
      <% end %>