<h2>User info</h2>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3>name <%= @user.name %></h3>
  <h3>introduction <%= @user.introduction %></h3>
  <%= link_to "edit", edit_user_path %>
</div>

<h2>New book</h2>

<%= form_with model: @book do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>